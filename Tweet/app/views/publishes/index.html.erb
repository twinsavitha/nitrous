<html>
  <head>
  </head>
  <body>
      <header><div id = "heading">Listing Publishes</div></header>
      <p id="notice"><%= notice %></p>
      <div id = "main">
      <div id="tabb">
      <table>
        <thead>
          <tr>
            <th>Topic</th>
            <th>Text</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @publishes.each do |publish| %>
            <tr>
              <td><%= publish.topic %></td>
              <td><%= publish.text %></td>
              <td><%= link_to 'Show', publish %></td>
              <td><%= link_to 'Edit', edit_publish_path(publish) %></td>
              <td><%= link_to 'Destroy', publish, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= link_to 'New Publish', new_publish_path %>
      </div>
      </div>
     <footer>
     </footer>
  </body>
</html>
