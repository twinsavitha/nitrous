<h1>Listing articles</h1>
 
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
  </tr>
 
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.topic %></td>
      <td><%= article.text %></td>
      <td><%= article %></td>
      <td><%= link_to 'show', publish_path(article) %></td>
      <td><%= link_to 'Edit', edit_publish_path(article) %></td>
      <td><%= link_to 'Destroy', publish_path(article),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
<%= link_to 'New article', new_publish_path %>